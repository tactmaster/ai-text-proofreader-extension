{
  "manifest_version": 2,
  "name": "AI Text Proofreader",
  "version": "0.1.2",
  "description": "An extension that uses AI/LLM to proofread and correct text in input fields",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "scripts": ["shared/browser-api.js", "background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/browser-api.js", "content/context-detector.js", "content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Text Proofreader"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": ["shared/*", "src/*"],
  "applications": {
    "gecko": {
      "id": "ai-text-proofreader@tactmaster.github.io",
      "strict_min_version": "57.0"
    }
  }
}