{
  "manifest_version": 3,
  "name": "AI Text Proofreader",
  "version": "0.2.0",
  "description": "An extension that uses AI/LLM to proofread and correct text in input fields",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/browser-api.js", "content/context-detector.js", "content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Text Proofreader"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["shared/*", "src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
