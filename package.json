{
  "name": "ai-text-proofreader",
  "version": "0.2.0",
  "description": "Chrome extension that uses AI/LLM to proofread and correct text in web page input fields",
  "main": "manifest.json",
  "scripts": {
    "dev": "echo 'Load extension in Chrome: chrome://extensions/ > Developer mode > Load unpacked'",
    "build": "scripts/build-multi-browser.sh",
    "build:chrome": "echo 'Building Chrome/Edge package...' && scripts/build-multi-browser.sh",
    "build:firefox": "echo 'Building Firefox package...' && scripts/build-multi-browser.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:formatting": "jest tests/formatting-preservation.test.js --verbose",
    "test:context": "jest tests/context-recognition.test.js --verbose",
    "test:anti-pattern": "jest tests/anti-pattern.test.js --verbose",
    "test:errors": "jest tests/chrome-runtime-error.test.js tests/extension-integration-error.test.js --verbose",
    "test:runtime": "jest tests/chrome-runtime-error.test.js --verbose",
    "test:integration": "jest tests/extension-integration-error.test.js --verbose"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "edge-extension",
    "multi-browser",
    "ai",
    "llm",
    "proofreading",
    "text-correction",
    "ollama",
    "openai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ai-text-proofreader.git"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/yourusername/ai-text-proofreader/issues"
  },
  "homepage": "https://github.com/yourusername/ai-text-proofreader#readme"
}
